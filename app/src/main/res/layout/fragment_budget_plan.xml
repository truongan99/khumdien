<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/gradient_plan"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context=".Fragment.BudgetPlan">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!-- TODO: Update blank fragment layout -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="50dp">

            <TextView
                android:id="@+id/header_list_re"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/khoan_thu"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold|italic" />

            <ListView
                android:id="@+id/lv_budget_plan_re"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true" />

            <TextView
                android:id="@+id/header_list_ex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="@string/khoan_chi"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold|italic" />

            <ListView
                android:id="@+id/lv_budget_plan_ex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true" />

        </LinearLayout>


        <TextView
            android:id="@+id/txt_add_plan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="+\nAdd Plan"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"
            android:visibility="visible" />

        <android.widget.Button
            android:id="@+id/btn_add_plan_budget"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="right|top"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="70dp"
            android:background="@drawable/circle_img"
            android:text="+"
            android:textColor="@color/black"
            android:textSize="35dp" />

    </FrameLayout>

</ScrollView>