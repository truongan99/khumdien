<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp">
    <ImageView
        android:layout_width="68dp"
        android:layout_height="68dp"
        android:src="@drawable/icon_13"
        android:id="@+id/iv_img_tran_show"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_weight="1">
        <TextView
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="Eat"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:id="@+id/tv_name_tran_show"/>
        <TextView
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="Note"
            android:textSize="15dp"
            android:id="@+id/tv_note_tran_show"
            android:maxLines="1"
            android:ellipsize="end"/>
        <TextView
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:text="19/05/2021"
            android:textSize="15dp"
            android:textColor="@color/black"
            android:id="@+id/tv_date_tran_show"/>
    </LinearLayout>
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="100.000.000"
            android:textSize="15dp"
            android:textColor="@android:color/holo_red_light"
            android:id="@+id/tv_money_tran_show"
            android:gravity="center"
            />
</LinearLayout>